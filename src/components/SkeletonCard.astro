---
// Componente de Skeleton Card para tarjetas
interface Props {
	variant?: 'default' | 'input' | 'button' | 'table-row' | 'stats';
}

const { variant = 'default' } = Astro.props;
---

{variant === 'default' && (
	<div class="bg-white rounded-lg shadow-md p-6 animate-pulse">
		<div class="h-4 bg-gray-200 rounded w-3/4 mb-4"></div>
		<div class="space-y-2">
			<div class="h-4 bg-gray-200 rounded w-full"></div>
			<div class="h-4 bg-gray-200 rounded w-5/6"></div>
			<div class="h-4 bg-gray-200 rounded w-4/6"></div>
		</div>
		<div class="mt-4 h-10 bg-gray-200 rounded w-1/3"></div>
	</div>
)}

{variant === 'input' && (
	<div class="space-y-2">
		<div class="h-4 bg-gray-200 rounded w-24"></div>
		<div class="h-10 bg-gray-200 rounded-md w-full"></div>
	</div>
)}

{variant === 'button' && (
	<div class="h-8 sm:h-10 bg-gray-200 rounded-lg w-24 sm:w-32 animate-pulse"></div>
)}

{variant === 'table-row' && (
	<tr class="animate-pulse">
		<td class="px-3 sm:px-6 py-3 sm:py-4">
			<div class="h-4 sm:h-5 bg-gray-200 rounded w-32 sm:w-40 mb-1"></div>
			<div class="h-2.5 sm:h-3 bg-gray-200 rounded w-24 sm:w-28 text-xs text-gray-400"></div>
		</td>
		<td class="px-3 sm:px-6 py-3 sm:py-4">
			<div class="h-5 sm:h-6 bg-gray-200 rounded-full w-16 sm:w-20"></div>
		</td>
		<td class="px-3 sm:px-6 py-3 sm:py-4">
			<div class="flex flex-wrap gap-1 sm:gap-2">
				<div class="h-5 sm:h-6 bg-gray-200 rounded w-10 sm:w-12"></div>
				<div class="h-5 sm:h-6 bg-gray-200 rounded w-10 sm:w-16"></div>
			</div>
		</td>
	</tr>
)}

{variant === 'stats' && (
	<div class="bg-white rounded-lg shadow-md p-4 sm:p-6">
		<div class="flex items-center">
			<div class="flex-shrink-0 bg-gray-200 rounded-lg p-2 sm:p-3 w-10 h-10 sm:w-12 sm:h-12 animate-pulse"></div>
			<div class="ml-3 sm:ml-4 flex-1 min-w-0 space-y-2">
				<div class="h-3 sm:h-4 bg-gray-200 rounded w-16 sm:w-20 animate-pulse"></div>
				<div class="h-6 sm:h-8 bg-gray-200 rounded w-10 sm:w-12 animate-pulse"></div>
			</div>
		</div>
	</div>
)}

